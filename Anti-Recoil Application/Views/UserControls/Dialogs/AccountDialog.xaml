<UserControl x:Class="Anti_Recoil_Application.UserControls.Dialogs.AccountDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Anti_Recoil_Application.UserControls.Dialogs"
             xmlns:helpers="clr-namespace:Anti_Recoil_Application.Helpers"
             mc:Ignorable="d">

    <Border CornerRadius="10"
            BorderBrush="{StaticResource BrushTertiary}"
            BorderThickness="1.5"
            Background="{StaticResource BrushPrimary}"
            Width="Auto"
            MinWidth="256"
            Height="Auto">

        <Grid Margin="10">
            <StackPanel>
                <!-- Header -->
                <TextBlock x:Name="HeaderText"
                           Margin="12"
                           HorizontalAlignment="Center"
                           Text="{Binding HeaderText}"
                           FontWeight="Bold"
                           Style="{StaticResource LabelStyle}" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <!-- First Name -->
                    <TextBox Width="175"
                             Style="{StaticResource PrimaryInputFieldStyle}"
                             helpers:WatermarkHelper.WatermarkText="{Binding FirstNameWatermarkText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,0"
                             Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />
                    <!-- Last Name -->
                    <TextBox Width="175"
                             Style="{StaticResource PrimaryInputFieldStyle}"
                             helpers:WatermarkHelper.WatermarkText="{Binding LastNameWatermarkText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="10,10,0,0"
                             Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel HorizontalAlignment="Center">
                    <!-- Username -->
                    <TextBox Width="360"
                             Style="{StaticResource PrimaryInputFieldStyle}"
                             helpers:WatermarkHelper.WatermarkText="{Binding UsernameWatermarkText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,0"
                             Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

                    <!-- Email -->
                    <TextBox Width="360"
                             Style="{StaticResource PrimaryInputFieldStyle}"
                             helpers:WatermarkHelper.WatermarkText="{Binding EmailWatermarkText, UpdateSourceTrigger=PropertyChanged}"
                             Margin="0,10,0,0"
                             Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" />


                </StackPanel>

                <StackPanel Margin="0 12 0 6" Orientation="Horizontal"
                            HorizontalAlignment="Center">
                    <!-- Update Password Button -->
                    <Button x:Name="LicenseButton"
                            Content="{Binding LicenseButtonText}"
                            Width="175"
                            Margin="6 0"
                            Height="35"
                            FontSize="16"
                            FontWeight="Bold"
                            HorizontalAlignment="Center"
                            Command="{Binding LicenseCommand}"
                            Style="{StaticResource TextButtonStyle}" />
                    <!-- Update Password Button -->
                    <Button x:Name="UpdatePasswordButton"
                            Content="Update Password"
                            Width="175"
                            Margin="6 0"
                            Height="35"
                            HorizontalAlignment="Center"
                            Command="{Binding UpdatePasswordCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" />

                </StackPanel>

                <!-- Footer -->
                <StackPanel Orientation="Horizontal"
                            Margin="12 6">

                    <!-- Cancel Button -->
                    <Button x:Name="ActionButton"
                            Content="{Binding ButtonText}"
                            Width="175"
                            Height="35"
                            Margin="6 0"
                            HorizontalAlignment="Center"
                            Command="{Binding ButtonCommand}"
                            Style="{StaticResource SecondaryButtonStyle}" />

                    <!-- Submit Button -->
                    <Button x:Name="CancelButton"
                            Content="{Binding SubmitButtonText}"
                            Width="175"
                            Margin="6 0"
                            Height="35"
                            HorizontalAlignment="Center"
                            Command="{Binding SubmitCommand}"
                            Style="{StaticResource PrimaryButtonStyle}" />
                </StackPanel>


            </StackPanel>

        </Grid>
    </Border>
</UserControl>
